<RadzenRow Style=@($"margin-bottom: {MarginBottomPx}px; margin-top: {MarginTopPx}px;")>
    <RadzenColumn Size="12">
        <RadzenCard class="glass-card">
            <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.Center">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1.25rem">
                    @if (!NoIcon)
                    {
                        <div class="glass-icon-container">
                            <RadzenIcon Icon="@GetIcon()" Style="font-size: 48px; color: var(--rz-primary); cursor: default;"/>
                        </div>
                    }
                    <RadzenStack Gap="0">
                        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                            <RadzenText TextStyle="TextStyle.H4" Style="color: var(--rz-primary); font-weight: 600; margin-bottom: 0px;">@Title</RadzenText>
                            @if (ShowHelpIcon)
                            {
                                <RadzenIcon Icon="help_outline" Style="color: var(--rz-primary); cursor: help;"/>
                            }
                        </RadzenStack>
                        @if (!string.IsNullOrEmpty(Subtitle))
                        {
                            <RadzenText TextStyle="TextStyle.Body2" Style="color: var(--rz-text-title-color);" class="mb-0">@Subtitle</RadzenText>
                        }
                    </RadzenStack>
                </RadzenStack>

                <RadzenStack Gap="0.75rem" AlignItems="AlignItems.End">
                    @if (ChildContent != null)
                    {
                        <div class="glass-content">
                            @ChildContent
                        </div>
                    }
                </RadzenStack>
            </RadzenStack>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>

@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Subtitle { get; set; }

    [Parameter]
    public bool NoIcon { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public bool ShowHelpIcon { get; set; }

    [Parameter]
    public int MarginBottomPx { get; set; }

    [Parameter]
    public int MarginTopPx { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private string GetIcon() => Icon ?? "info";
}