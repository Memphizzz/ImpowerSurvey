            <CascadingAuthenticationState>
                <AuthorizeView>
                    <Authorized Context="auth">
                        <RadzenPanelMenu>
                            @if (NavigationManager.Uri.Contains("/take-survey/"))
                            {
                                <SurveyQuestionsMenu/>
                            }
                            else
                            {
                                <AuthorizeView Roles="@nameof(Roles.SurveyManager)">
                                    <Authorized>
                                        <RadzenPanelMenuItem Text="Survey Management" Icon="dashboard" Expanded="true">
                                            <RadzenPanelMenuItem Text="All Surveys" Icon="list" Path="/surveys"/>
                                            <RadzenPanelMenuItem Text="Create Example" Icon="android" Click="CreateExample"/>
                                            <RadzenPanelMenuItem Text="Create new Survey" Icon="add_circle" Path="/create-survey"/>
                                            @if (NavigationManager.Uri.Contains("/surveys") ||
                                                 NavigationManager.Uri.Contains("/create-survey") ||
                                                 NavigationManager.Uri.Contains("/edit-survey/"))
                                            {
                                                <SurveyManagementMenu/>
                                            }
                                            else if (NavigationManager.Uri.Contains("/survey-results/"))
                                            {
                                                <SurveyResultsMenu/>
                                            }
                                            <RadzenPanelMenuItem Text="Reports" Icon="analytics" Expanded="true">
                                                <div class="menu-button-wrapper">
                                                    <RadzenButton Text="Combine Reports" Icon="dashboard_customize" ButtonStyle="ButtonStyle.Primary" Variant="Variant.Text" Size="ButtonSize.Small"
                                                                  Click="@(() => NavigationManager.NavigateTo("/reports"))"/>
                                                </div>
                                            </RadzenPanelMenuItem>
                                        </RadzenPanelMenuItem>
                                        <RadzenPanelMenuItem Text="Logout" Icon="logout" Click="() => HandleLogout()"/>
                                    </Authorized>
                                </AuthorizeView>

                                <AuthorizeView Roles="@nameof(Roles.Admin)">
                                    <Authorized>
                                        <RadzenPanelMenuItem Text="Administration" Icon="admin_panel_settings" Expanded="true">
                                            <RadzenPanelMenuItem Text="User Management" Icon="people" Path="/admin/users"/>
                                            <RadzenPanelMenuItem Text="DSS Status" Icon="monitoring" Path="/admin/dss"/>
                                            <RadzenPanelMenuItem Text="System Settings" Icon="settings" Path="/admin/settings"/>
                                            <RadzenPanelMenuItem Text="System Logs" Icon="analytics" Path="/admin/logs" />
                                            <RadzenPanelMenuItem Text="Debug" Icon="bug_report" Path="/admin/debug"/>
                                        </RadzenPanelMenuItem>
                                        <RadzenPanelMenuItem Text="Logout" Icon="logout" Click="() => HandleLogout()"/>
                                    </Authorized>
                                </AuthorizeView>
                            }
                        </RadzenPanelMenu>
                    </Authorized>
                    <NotAuthorized>
                        <RadzenPanelMenu>
                            <RadzenPanelMenuItem Text="Login" Icon="login" Path="/login"/>
                            <RadzenPanelMenuItem Text="About SHIELD" Icon="security" Path="/shield"/>
                        </RadzenPanelMenu>
                    </NotAuthorized>
                </AuthorizeView>
            </CascadingAuthenticationState>

            <RadzenStack AlignItems="AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
                <div>
                    <RadzenText Text="@($"v.{VersionInfo.FullVersion}")" TextStyle="TextStyle.Caption" TagName="TagName.P" TextAlign="TextAlign.Center"/>
                </div>
            </RadzenStack>
        </RadzenSidebar>
        <RadzenHeader>
            <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
                <RadzenColumn Size="5" Style="height:65px;">
                    @if (User == null)
                    {
                        <RadzenStack Orientation="Orientation.Horizontal" Style="cursor: pointer;" @onclick="NavigateHome">
                            <!-- Company Logo (icon) -->
                            @if (LogoType == "svg" && !string.IsNullOrEmpty(LogoSvg))
                            {
                                <div style="margin-left: 5px; @HeaderStyle">
                                    @((MarkupString)LogoSvg)
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(LogoUrl) && LogoType == "image")
                            {
                                <RadzenImage Path="@LogoUrl" Style="margin-left: 5px;"/>
                            }

                            <!-- Company Name Logo -->
                            @if (CompanyNameLogoType == "svg" && !string.IsNullOrEmpty(CompanyNameLogoSvg))
                            {
                                <div style="margin-left: 5px; align-content: center; @HeaderStyle">
                                    @((MarkupString)CompanyNameLogoSvg)
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(CompanyNameLogoUrl) && CompanyNameLogoType == "image")
                            {
                                <RadzenImage Path="@CompanyNameLogoUrl" Style="height: 30px;"/>
                            }
                        </RadzenStack>
                    }
                </RadzenColumn>
                <RadzenColumn Size="7">
                    <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0.5rem" class="rz-px-2">
                        <RadzenAppearanceToggle/>
                        <RadzenButton Icon="admin_panel_settings" Click="@(() => NavigationManager.NavigateTo("/login"))"/>
                        <RadzenToggleButton Icon="@Icon" Change="@ToggleVantaBackground"/>
                    </RadzenStack>
                </RadzenColumn>
            </RadzenRow>
        </RadzenHeader>
        <RadzenBody>
            <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center" Style="max-width: 1440px; padding-top: 0px !important;">
                <RadzenColumn Size="12">
                    @Body
                </RadzenColumn>
            </RadzenRow>
        </RadzenBody>
        <RadzenText Text="@VersionInfo.FullVersion"
                    Style="position: fixed; bottom: .5rem; right: 1rem; z-index: 1000; opacity: 0.7;"
                    TextStyle="TextStyle.Caption"/>
    </RadzenLayout>
</CascadingValue>